# =============================================================================
# Tesslate Studio - AWS EKS Terraform Variables
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values.
# DO NOT commit terraform.tfvars to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
project_name = "tesslate"
environment  = "production"
aws_region   = "us-east-1"

# -----------------------------------------------------------------------------
# Domain Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Your primary domain (main website will be at this domain)
domain_name = "saipriya.org"

# User projects will be at: <container>.<project-slug>.saipriya.org

# -----------------------------------------------------------------------------
# Cloudflare Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Create an API token at: https://dash.cloudflare.com/profile/api-tokens
# Permissions needed:
#   - Zone:DNS:Edit
#   - Zone:Zone:Read
cloudflare_api_token = "your-cloudflare-api-token"

# Optional: Specific zone ID (if you have multiple domains)
cloudflare_zone_id = ""

# -----------------------------------------------------------------------------
# VPC Configuration
# -----------------------------------------------------------------------------
vpc_cidr           = "10.0.0.0/16"
enable_nat_gateway = true
single_nat_gateway = true  # Use multiple NAT gateways for production HA

# -----------------------------------------------------------------------------
# EKS Configuration
# -----------------------------------------------------------------------------
eks_cluster_version     = "1.29"
eks_node_instance_types = ["t3.large"]  # Adjust based on workload
eks_node_desired_size   = 2
eks_node_min_size       = 1
eks_node_max_size       = 5
eks_node_disk_size      = 50

# -----------------------------------------------------------------------------
# S3 Configuration
# -----------------------------------------------------------------------------
s3_bucket_prefix = "tesslate-projects"
s3_force_destroy = false  # Set true only for testing

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Set to true to use AWS RDS PostgreSQL instead of K8s-managed postgres
create_rds            = false
rds_instance_class    = "db.t3.small"
rds_allocated_storage = 20
rds_database_name     = "tesslate"
rds_username          = "tesslate_admin"

# -----------------------------------------------------------------------------
# Application Secrets (REQUIRED)
# -----------------------------------------------------------------------------
# PostgreSQL password
# Generate with: openssl rand -hex 32
postgres_password = "your-secure-postgres-password"

# Application secret key for JWT signing
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
app_secret_key = "your-app-secret-key"

# -----------------------------------------------------------------------------
# LiteLLM Configuration (REQUIRED for AI features)
# -----------------------------------------------------------------------------
litellm_api_base       = "https://your-litellm-instance.com/v1"
litellm_master_key     = "your-litellm-master-key"
litellm_default_models = "gpt-4o-mini"

# -----------------------------------------------------------------------------
# OAuth Configuration (Optional)
# -----------------------------------------------------------------------------
# Google OAuth (https://console.cloud.google.com/apis/credentials)
google_client_id     = ""
google_client_secret = ""

# GitHub OAuth (https://github.com/settings/developers)
github_client_id     = ""
github_client_secret = ""

# -----------------------------------------------------------------------------
# Stripe Configuration (Optional)
# -----------------------------------------------------------------------------
stripe_secret_key     = ""
stripe_webhook_secret = ""

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
enable_cluster_autoscaler = true
enable_metrics_server     = true
enable_external_dns       = true
enable_cert_manager       = true
